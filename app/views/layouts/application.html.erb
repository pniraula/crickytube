<!DOCTYPE html>
<html>
	<head>
  		<title>Crickytube | <%=@title%></title>
  			<%= stylesheet_link_tag :all %>
 			<%= javascript_include_tag :defaults %>
  			<%= csrf_meta_tag %>
	</head>
	<body>
		<div id="wrapper">
			<div id="header">
				<div id="logo">
					<img src="http://i.imgur.com/r3SOE.png"/>
				</div>
				<nav id="navs">
					<ul>
						<li><%= link_to "Recent", recent_path %></li>
						<li><%= link_to "Popular",popular_path%></li>
						<li><%= link_to "CrickyTube", crickytube_path%></li>
						<li><%= link_to "Fan-Fights", fanfights_path%></li>
						<li><%= link_to "Live Links", livelinks_path%></li>
						<li><%= link_to "Highlights",highlights_path%></li>
					</ul>
				</div>
				<div id="mainarea">
					<%= yield %>
				</div>
		</div>
	</body>
</html>
